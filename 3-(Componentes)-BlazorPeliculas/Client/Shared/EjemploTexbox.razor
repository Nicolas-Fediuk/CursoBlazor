@* parametros arbitrarios *@
<input type="text" @attributes="ParametrosAdicionales">

@code {
    //captura valores no coincidentes
    // en este caso podemos pasarle todos los atributos del campo texto 
    [Parameter(CaptureUnmatchedValues = true)]
    public IDictionary<string, object> ParametrosAdicionales { get; set; }
}
