
<h3>@pelicula.Titulo</h3>
@if (DateTime.Now.Year == 2023)
{
    <span>Nuevo</span>
}
<p>titulo: @pelicula.Titulo</p>
<p>Fecha de lanzamiento: @pelicula.FechaLanzamiento.ToString("dd mm yyyy")</p>
@if (MostrarBotones)
{
    <div>
        @*para seleccionar la pelicula de devolverlo al padre*@
        <button @onclick="@(() => EliminarPelicula.InvokeAsync(pelicula))">Borrar</button>
    </div>
}


@code {
    [Parameter]
    [EditorRequired]
    public Pelicula? pelicula { get; set; }

    [Parameter]
    public bool MostrarBotones { get; set; } = false;

    //se lo delega al componente padre, le devuelve un objeto pelicula
    [Parameter]
    public EventCallback<Pelicula> EliminarPelicula { get; set; }
}
